@page "/products"
@using HardwareStore.Domain.Models
<MudGrid Spacing="5" Class="d-flex" Justify="Justify.SpaceAround">
    <MudItem>
        <MudPaper Class="pa-5 d-flex align-center">
                <MudContainer Class="d-flex align-start justify-space-between">
                    <MudContainer Class="d-flex flex-column pa-0" MaxWidth="MaxWidth.False">
                        <MudImage Width="200" Height="200" Src="https://cdn1.technopark.ru/technopark/photos_resized/product/1000_1000/614113/1_614113.jpg"></MudImage>
                        <MudText Color="Color.Info" Align="Align.Start" Class="mb-3 mt-3">
                            <b>Характеристики:</b>
                        </MudText>
                        <MudStack Row="true" Spacing="1">
                            <MudText Color="Color.Primary">
                                <b>Ширина:</b>
                            </MudText>
                            <MudText>
                                @strings
                            </MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="1">
                            <MudText Color="Color.Primary">
                                <b>Высота:</b>
                            </MudText>
                            <MudText>
                                @strings
                            </MudText>
                        </MudStack>
                    </MudContainer>
                    <MudContainer Class="d-flex flex-column pl-5">
                        <MudText Align="Align.Start" Color="Color.Info">
                            <b>Название категории</b>
                        </MudText>
                        <MudText Align="Align.Start">123123</MudText>
                        <MudText Align="Align.Start">Код: @strings</MudText>
                        <MudStack Row="true" Spacing="1">
                            <MudText Color="Color.Secondary">
                                <b>Стоимость:</b>
                            </MudText>
                            <MudText>
                                @strings
                            </MudText>
                        </MudStack>
                        <MudContainer Class="d-flex justify-start ma-0 mt-2 pa-0">
                            <MudTooltip Text="В корзину">
                                <MudIconButton Class="pa-1" Color="Color.Tertiary" Icon="@Icons.Filled.ShoppingCart"/>
                            </MudTooltip>
                            <MudTooltip Text="В избранное">
                                <MudIconButton Class="pa-1" Color="Color.Secondary" Icon="@Icons.Filled.Favorite"/>
                            </MudTooltip>
                        </MudContainer>
                        <MudButton Class="mt-7" Variant="Variant.Filled" Color="Color.Primary">Подробнее</MudButton>
                    </MudContainer>
                </MudContainer>
            </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private string strings = "1";
}